---
const { image, name } = Astro.props;
---

<div>
  <a href=`/sarnjao/god/${name}` class="p-3 shadow-md rounded-xl bg-red-300">
    <img
      src=`/sarnjao/god/${image}`
      style={{
        height: "30vh",
      }}
    />
    <h1 class="text-2xl font-semibold text-center">{name}</h1>
  </a>
</div>
